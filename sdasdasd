<script>
    const youtubeVideoID = "Bf2ml3oE2JA"; 
    let player, hue = 190, isPlaying = false, isAdmin = false;

    // --- LIVE CLOCK LOGIC ---
    function updateClock() {
        const now = new Date();
        let hours = now.getHours();
        const minutes = String(now.getMinutes()).padStart(2, '0');
        const seconds = String(now.getSeconds()).padStart(2, '0');
        const ampm = hours >= 12 ? 'PM' : 'AM';
        hours = hours % 12;
        hours = hours ? hours : 12; // the hour '0' should be '12'
        const strTime = hours + ':' + minutes + ':' + seconds + ' ' + ampm;
        document.getElementById('liveClock').textContent = strTime;
    }
    setInterval(updateClock, 1000);
    updateClock();

    // YT API
    const tag = document.createElement('script');
    tag.src = "https://www.youtube.com/iframe_api";
    document.head.appendChild(tag);
    function onYouTubeIframeAPIReady() {
        player = new YT.Player('ytPlayer', {
            videoId: youtubeVideoID,
            playerVars: { 'autoplay': 0, 'loop': 1, 'playlist': youtubeVideoID },
            events: { 'onStateChange': (e) => isPlaying = (e.data === 1) }
        });
    }
    function toggleMusic() {
        if (player.getPlayerState() === 1) player.pauseVideo();
        else player.playVideo();
    }

    const canvas = document.getElementById('canvas'), ctx = canvas.getContext('2d');
    let stars = [], particles = [];
    function resize() { canvas.width = window.innerWidth; canvas.height = window.innerHeight; }
    window.addEventListener('resize', resize); resize();

    class Particle {
        constructor(x, y) { this.x = x; this.y = y; this.vx = (Math.random()-0.5)*8; this.vy = (Math.random()-0.5)*8; this.alpha = 1; }
        draw() { ctx.fillStyle = `hsla(${hue}, 100%, 70%, ${this.alpha})`; ctx.beginPath(); ctx.arc(this.x, this.y, 2, 0, Math.PI*2); ctx.fill(); }
        update() { this.x += this.vx; this.y += this.vy; this.alpha -= 0.03; }
    }

    class Star {
        constructor() { this.reset(); }
        reset() { this.x = Math.random()*canvas.width; this.y = Math.random()*canvas.height; this.size = Math.random()*2; this.speed = Math.random()*4+2; }
        update() {
            let s = isPlaying ? this.speed*2 : this.speed; this.x += s;
            if (this.x > canvas.width) { this.reset(); this.x = -10; }
        }
        draw() { ctx.fillStyle = `hsl(${hue}, 100%, 75%)`; ctx.beginPath(); ctx.arc(this.x, this.y, this.size, 0, Math.PI*2); ctx.fill(); }
    }
    for (let i = 0; i < 40; i++) stars.push(new Star());

    function animate() {
        ctx.fillStyle = 'rgba(0, 0, 0, 0.2)'; ctx.fillRect(0, 0, canvas.width, canvas.height);
        if (isPlaying) {
            hue = (hue + 1) % 360; 
            document.documentElement.style.setProperty('--accent-hue', hue);
            if (Math.random() > 0.98) {
                document.querySelectorAll('.profile-card').forEach(c => { c.classList.add('card-pulse'); setTimeout(() => c.classList.remove('card-pulse'), 100); });
            }
        }
        stars.forEach(s => { s.update(); s.draw(); });
        particles.forEach((p, i) => { p.update(); p.draw(); if (p.alpha <= 0) particles.splice(i, 1); });
        requestAnimationFrame(animate);
    }
    animate();

    let savedProfiles = JSON.parse(localStorage.getItem('lyzyProfiles')) || [];

    function saveAndRefresh() {
        localStorage.setItem('lyzyProfiles', JSON.stringify(savedProfiles));
        renderDashboard();
        renderAdminList();
    }

    function renderDashboard() {
        const grid = document.getElementById('profileGrid');
        grid.innerHTML = '';
        const roleColors = { "Admin": "#ff4b4b", "Web Creator": "#00d4ff", "VIP": "#e040fb", "Friend": "#00ff88" };

        savedProfiles.forEach((user) => {
            const color = roleColors[user.role] || "#00ff88";
            const card = document.createElement('div');
            card.className = 'profile-card';
            card.style.setProperty('--role-color', color);
            card.innerHTML = `
                <img src="${user.img}" class="profile-img">
                <div class="name">${user.name}</div>
                <div class="role">${user.role}</div>
                <div class="status-area online">
                    <span class="dot"></span><span class="status-text">Online</span>
                </div>
                <a href="${user.fb}" target="_blank" class="fb-link">Visit FB</a>
            `;
            grid.appendChild(card);
        });
    }

    function renderAdminList() {
        const listContainer = document.getElementById('adminManageItems');
        listContainer.innerHTML = '<h5 style="margin:10px 0; color:red">Manage Friends:</h5>';
        savedProfiles.forEach((user, index) => {
            const div = document.createElement('div');
            div.className = 'manage-item';
            div.innerHTML = `<span>${user.name}</span><button class="del-btn" onclick="deleteProfile(${index})">Remove</button>`;
            listContainer.appendChild(div);
        });
    }

    function addNewProfile() {
        const name = document.getElementById('newName').value, role = document.getElementById('newRole').value, img = document.getElementById('newImg').value, fb = document.getElementById('newFb').value;
        if (name && img && fb) {
            savedProfiles.push({ name, role, img, fb });
            saveAndRefresh();
            document.getElementById('newName').value = ''; document.getElementById('newImg').value = ''; document.getElementById('newFb').value = '';
        }
    }

    function deleteProfile(index) {
        if(confirm("Delete Friend?")) { savedProfiles.splice(index, 1); saveAndRefresh(); }
    }

    renderDashboard();

    function openLogin() { document.getElementById('loginModal').style.display = 'flex'; if(isAdmin) renderAdminList(); }
    function closeLogin() { document.getElementById('loginModal').style.display = 'none'; }
    function checkLogin() {
        if (document.getElementById('username').value === "lyzy" && document.getElementById('password').value === "prolyzy") {
            isAdmin = true;
            document.getElementById('welcomeBanner').style.display = 'block';
            document.getElementById('adminBtn').style.display = 'none';
            document.getElementById('exitAdminBtn').style.display = 'block';
            document.getElementById('loginFields').style.display = 'none';
            document.getElementById('adminPanel').style.display = 'block';
            renderAdminList();
        } else { alert("Access Denied"); }
    }
    function exitAdmin() {
        isAdmin = false;
        document.getElementById('welcomeBanner').style.display = 'none';
        document.getElementById('exitAdminBtn').style.display = 'none';
        document.getElementById('adminBtn').style.display = 'block';
        document.getElementById('loginFields').style.display = 'block';
        document.getElementById('adminPanel').style.display = 'none';
    }
</script>
</body>
</html>
